{
  "include": ["."],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types" : ["webpack-env", "node"],
    "lib": ["es6", "dom", "es2017"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
